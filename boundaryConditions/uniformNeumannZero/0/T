dimensions      [0 0 0 1 0 0 0]; // размерность поля 'T'

// начальные условия
internalField   uniform 0.0;

// граничные условия
boundaryField
{
    boundary_region_name // имя участка границы
    {
		// Производная поля 'T' по внешней нормали к границе области
		// всюду на границе равна нулю
        type            zeroGradient; // тип граничных условий
    }
}
