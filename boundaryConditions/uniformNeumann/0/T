dimensions      [0 0 0 1 0 0 0]; // размерность поля 'T'

// начальные условия
internalField   uniform 0.0;

// граничные условия
boundaryField
{
    boundary_region_name // имя участка границы
    {
        type            fixedGradient; // тип граничных условий
        gradient		uniform -1.0; // равномерное значение
        // здесь 'gradient' означает значение производной по внешней нормали
    }
}
